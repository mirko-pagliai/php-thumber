{
    "name": "mirko-pagliai/php-thumber",
    "description": "A PHP library to generate thumbnails",
    "homepage": "https://github.com/mirko-pagliai/php-thumber",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mirko Pagliai",
            "email": "mirko.pagliai@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2.5",
        "intervention/image": "^2.4",
        "mirko-pagliai/php-tools": "^1.4.7"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^4.0",
        "phpunit/phpunit": "^7.0|^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Thumber\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Thumber\\Test\\": "tests/TestCase"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@update-lowest",
            "@test",
            "@composer update",
            "@test",
            "@stan"
        ],
        "cs-check": "phpcs --standard=phpcs.xml.dist",
        "cs-fix": "phpcbf --standard=phpcs.xml.dist",
        "test": "phpunit",
        "coverage": "XDEBUG_MODE=coverage phpunit --coverage-html=coverage",
        "phpstan": "phpstan.phar analyse",
        "psalm": "psalm.phar",
        "stan": [
            "@stan-setup",
            "@phpstan",
            "@psalm"
        ],
        "stan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^0.12 psalm/phar:\"^3.18|^4\" && mv composer.backup composer.json",
        "update-lowest": "@composer update --prefer-lowest"
    }
}
