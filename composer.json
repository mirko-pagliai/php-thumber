{
    "name": "mirko-pagliai/php-thumber",
    "description": "A PHP library to generate thumbnails",
    "homepage": "https://github.com/mirko-pagliai/php-thumber",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mirko Pagliai",
            "email": "mirko.pagliai@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-fileinfo": "*",
        "intervention/image": "^2.4",
        "mirko-pagliai/php-tools": "^1.7.1|^1.8"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^4.0",
        "phpunit/phpunit": "^9.1|^9.5",
        "phpstan/phpstan": "^1.7",
        "psalm/phar": "^4.24"
    },
    "autoload": {
        "psr-4": {
            "Thumber\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Thumber\\Test\\": "tests/TestCase"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@update-lowest",
            "phpunit",
            "@composer update",
            "phpunit",
            "@stan"
        ],
        "cs-check": "phpcs --standard=phpcs.xml.dist",
        "cs-fix": "phpcbf --standard=phpcs.xml.dist",
        "coverage": "XDEBUG_MODE=coverage phpunit --coverage-html=coverage",
        "phpstan": "phpstan.phar analyse",
        "psalm": "psalm.phar --php-version=8.0",
        "stan": [
            "@phpstan",
            "@psalm"
        ],
        "update-lowest": "@composer update --prefer-lowest"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
